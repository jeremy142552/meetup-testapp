<div class="container">
  <h1>Edit Group: <%= @group.name %>
  </h1>

  <%= form_with model: @group, url: group_path(@group), method: :patch, class: 'form' do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Group Name' %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.submit 'Update Group' , class: 'btn btn-primary' %>
    </div>
    <% end %>

      <%= link_to 'Show' , @group, class: 'btn btn-secondary' %>
        <%= link_to 'Back to Groups' , groups_path, class: 'btn btn-secondary' %>
</div>